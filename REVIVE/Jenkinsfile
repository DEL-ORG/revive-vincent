        //             sh """
        //                 docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD
        //             """
        //              }
        //         }
        // }

        stage('create directory') {
            steps {
                script {
                    sh '''
                    mkdir banana rice oil
                    '''
                }
            }
        }

        stage('delete directory and file') {
            steps {
                script {
                    sh '''
                    rm -rf banana rice oil
                    rm plantain cassava watermelon
                    '''
                }
            }
        } 

